.container
  .row
    .col-md-8.col-md-offset-2{style: 'margin-top: 100px;'}
      .jumbotron
        %h1 Songabilly
        %p What's your favorite music?

        %form.form-inline{action: "#{game_path}", method: 'post'}
          =tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
          .form-group
            %input#genre-selection.form-control{type: "text", name: 'genre', placeholder: 'Select a genre'}/
          %button#genre-selection-submit.btn.btn-lg.btn-primary Let's go!

=javascript_include_tag 'index'
