.container
  .row
    .col-md-6.col-md-offset-3
      %h1 Song-o-matic
      %p Lorem ipsum dolor sit amet.

      %form{action: "#{game_path}", method: 'post'}
        =tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
        .form-group
          %input#genre-selection.input-lg.form-control{type: "text", name: 'genre', placeholder: 'Select a genre'}/
        %button.btn.btn-block.btn-lg.btn-primary Let's go!

=javascript_include_tag 'index'
